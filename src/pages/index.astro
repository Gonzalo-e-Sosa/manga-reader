---
import BaseLayout from "@/layouts/Base.astro";
import List from "@/components/manga/List.astro";
---

<BaseLayout>
  <Fragment slot="main">
    <h1 class="mt-4 md:text-center">Manga List</h1>
    <div class="w-full flex items-center justify-center">
      <input
        class="p-2 w-1/4 border-2 border-gray-400 rounded"
        type="search"
        name="title"
        placeholder="One Punch Man, Dragon Ball, Naruto..."
        hx-get="/partials/manga-list/similar-title"
        hx-target="#manga-list"
        hx-trigger="keyup changed delay:500ms, search"
        hx-swap="innerHTML transition:true"
      />
    </div>
    <section class="flex items-center justify-center w-full mt-4 flex-column">
      <List get="/partials/manga-list/results" params={{}} />
    </section>
  </Fragment>
</BaseLayout>
