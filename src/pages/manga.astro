---
import BaseLayout from "@/layouts/Base.astro";
import List from "@/components/manga/List.astro";
import { PATH_TO_PARTIALS } from "@/consts.js";
---

<BaseLayout>
  <Fragment slot={"main"}>
    <h1 class="mt-4 md:text-center">Manga List</h1>
    <section class="mt-4 w-full flex flex-column justify-center items-center">
      <List
        get=`${PATH_TO_PARTIALS}/manga-list/results`
        params={{}}
        trigger="load"
      />
    </section>
  </Fragment>
</BaseLayout>
