---
import MangaCoverArt from "@/pages/partials/manga-cover-art.astro";
import type { ThumbnailSize } from "@/services/types";

interface Props {
  title: string;
  description: string;
  mangaId: string;
  coverArtId: string;
  alt: string;
  width: ThumbnailSize;
  height: number;
  loading: "lazy" | "eager";
}

const { title, description, mangaId, coverArtId, alt, width, height, loading } =
  Astro.props;
---

<article>
  <figure>
    <MangaCoverArt
      mangaId={mangaId}
      coverArtId={coverArtId}
      alt={alt + " cover art"}
      width={width}
      height={height}
      loading={loading ?? "lazy"}
    />
    <figcaption>
      <h3>{title}</h3>
      <p>{description}</p>
    </figcaption>
  </figure>
</article>

<style is:inline>
  article {
    height: 100%;
    max-height: 500px;
    border-radius: 10px;
    overflow: hidden;
    cursor: pointer;
    position: relative;
    box-shadow: 0 10px 30px 5px rgba(0, 0, 0, 0.2);
    transition: 0.3s;
    &:hover {
      box-shadow: 0 10px 30px 5px rgba(0, 0, 0, 0.5);
    }
  }
  figure {
    height: inherit;
    display: grid;
    grid-template-rows: 2fr 1fr;
    gap: 1rem 0;
    img {
      height: 100%;
      min-height: 100%;
      object-fit: cover;
      mask-image: linear-gradient(black 80%, transparent);
      &:hover {
        opacity: 0.5;
      }
    }
    figcaption {
      color: var(--theme-text);
      max-width: 100%;
      padding: 0.75rem;
      overflow: hidden;
      h3 {
        margin-bottom: 0.65rem;
      }
      p {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
      }
    }
  }
</style>
