---
import Sun from "./icons/Sun.astro";
import Moon from "./icons/Moon.astro";

interface Props {
  theme: boolean;
}

const props = Astro.props;
const { theme } = props;
---

<div>
  <button id="theme-toggle" onclick="toggleTheme()">
    {theme ? <Sun /> : <Moon />}
  </button>
</div>

<style>
  #theme-toggle {
    background-color: transparent;
    border: none;
    cursor: pointer;
  }
</style>

<script is:inline></script>
